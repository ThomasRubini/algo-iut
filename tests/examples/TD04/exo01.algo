fonction saisirEntierSupX  (invite : in string, msgErr : in string, x : in entier_naturel) renvoie entier_naturel
debut
	declarer n : entier_naturel;
	boucle
		afficher (invite);
		saisir(n);
		si (n > x) sortie;
		afficher (msgErr);
		ligne_suivante;
	fboucle	
	renvoie n;
fin

